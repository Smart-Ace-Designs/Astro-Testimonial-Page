---
interface Props {
  name: string;
  rating: number;
  review: string;
  socialMedia: string;
}

const { name, rating, review, socialMedia }: Props = Astro.props;
---

<article>
  <div class="flex flex-row items-center gap-x-4">
    <img src={socialMedia} alt="" width={100} height={100} />
    <div class="flex flex-row gap-1">
      {Array.from({ length: rating }).map(() => <img class="size-6" src="/Star_fill.svg" alt="" />)}
      {
        Array.from({ length: 5 - rating }).map(() => (
          <img class="size-6" src="/Star_fill_gray.svg" alt="" />
        ))
      }
    </div>
  </div>
  <h2>{name}</h2>
  <p>{review}</p>
</article>
