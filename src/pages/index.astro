---
import MainLayout from "@/layouts/MainLayout.astro";

import AppCard from "@/components/AppCard.astro";

const reviews = [
  {
    name: "Samantha Lee",
    rating: 4,
    review: "The checklist ensures that the review process is thorough",
    socialMedia: "/google-testimonial.svg",
  },
  {
    name: "Rachel Patel",
    rating: 5,
    review: "I highly recommend the Writecream Business Description",
    socialMedia: "/meta-testimonial.svg",
  },
];
---

<MainLayout
  title="devChallenges | Testimonial Page"
  description="A devChallenges.io coding challenge."
>
  <div class="flex flex-row">
    <div class="flex flex-1 flex-col">
      <div class="bg-theme-yellow flex size-12 items-center justify-center rounded-full text-xl">
        ⭐️
      </div>
      <h1 class="text-theme-black text-4xl font-bold">Reviewers</h1>
      <p class="text-theme-gray">
        Reviewers is where people can access guidelines, checklists, and other tools to assist them
        in reviewing papers or manuscripts. It provides a structured approach to ensure that the
        review process is thorough, efficient, and consistent.
      </p>
      <div>
        <ul class="flex flex-col gap-2">
          <li class="flex flex-row items-center gap-2">
            <img src="/Done_ring_round_fill.svg" alt="" /> Checklist to Review an Academic Paper
          </li>
          <li class="flex flex-row items-center gap-2">
            <img src="/Done_ring_round_fill.svg" alt="" /> Peer Review Checklist
          </li>
          <li class="flex flex-row items-center gap-2">
            <img src="/Done_ring_round_fill.svg" alt="" /> Checklist for Editors, Reviewers, and Authors
            of SPIE Journals
          </li>
        </ul>
      </div>
    </div>
    <div class="flex flex-1 flex-col gap-4">
      {
        reviews.map((review, index) => (
          <AppCard
            alignment={index % 2 === 0 ? "self-end" : "self-start"}
            name={review.name}
            rating={review.rating}
            review={review.review}
            socialMedia={review.socialMedia}
          />
        ))
      }
    </div>
  </div>
</MainLayout>
